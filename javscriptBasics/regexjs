// Basic regex
function basicRegex() {
  let str = "Hello World";
  let pattern = /World/;
  document.getElementById("basicResult").innerHTML =
    pattern.test(str); // true
}

// Flags
function regexFlags() {
  let str = "JavaScript javascript JAVASCRIPT";
  let pattern = /javascript/gi; // global + ignore case
  document.getElementById("flagsResult").innerHTML = str.match(pattern);
}

// Classes
function regexClasses() {
  let str = "My number is 12345 and code is JS2025";
  let digits = str.match(/\d+/g); // digits
  let words = str.match(/\w+/g);  // words
  document.getElementById("classesResult").innerHTML =
    "Digits: " + digits + "<br>Words: " + words;
}

// Metacharacters
function regexMetachars() {
  let str = "cat, bat, mat, hat";
  let result = str.match(/.at/g); // . matches any char
  document.getElementById("metacharsResult").innerHTML = result;
}

// Assertions
function regexAssertions() {
  let str = "hello world";
  let start = /^hello/.test(str);
  let end = /world$/.test(str);
  document.getElementById("assertionsResult").innerHTML =
    "Starts with hello? " + start + "<br>Ends with world? " + end;
}

// Quantifiers
function regexQuantifiers() {
  let str = "Hellooooo";
  let result = /o{2,}/.test(str); // o appears 2 or more times
  document.getElementById("quantifiersResult").innerHTML = result;
}

// Patterns
function regexPatterns() {
  let email = "sony@example.com";
  let pattern = /^[\w.-]+@[\w.-]+\.\w+$/;
  document.getElementById("patternsResult").innerHTML =
    "Is valid email? " + pattern.test(email);
}

// RegExp Objects
function regexObjects() {
  let pattern = new RegExp("abc", "i");
  let str = "ABC found";
  document.getElementById("objectsResult").innerHTML =
    pattern.test(str); // true
}

// String Methods + Regex
function regexMethods() {
  let str = "I like JavaScript and Java.";
  let replaced = str.replace(/Java/g, "TypeScript");
  document.getElementById("methodsResult").innerHTML = replaced;
}
